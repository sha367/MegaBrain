// @see - https://www.electron.build/configuration/configuration
{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.sha367.mygpx",
  "asar": true,
  "productName": "MyGPX",
  // TODO: Update this for other platforms
  "afterSign": "mac/notarize.cjs",
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist",
    "dist-electron",
    "!resources${/*}",
       "!**/*.map",  // Exclude source maps
    "!**/*.ts",   // Exclude TypeScript files
    "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
    "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
    "!**/node_modules/*.d.ts",
    "!**/node_modules/.bin"
  ],
  "extraResources": [
    {
      from: 'resources',
      to: '.',
      filter: [
        '**/*'
      ],
    },
  ],
  "mac": {
    "forceCodeSigning": true,
    "icon": "assets/icons/icon.icns",
    "target": "default",
    "arch": ["x64", "arm64"],
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "artifactName": "${productName}-Mac-${version}-Installer.${ext}",
    "signIgnore": [
      ".*postgres.*"
    ],
    "entitlements": "mac/entitlements.mas.plist",
    "entitlementsInherit": "mac/entitlements.mas.inherit.plist",
    "electronTeamId": "75TVAP9U45",
    "teamId": "75TVAP9U45",
    "provisioningProfile": "mac/GPX_prov_profile_manjot.provisionprofile"
   
  },
  "win": {
    "icon": "assets/icons/icon.icns",
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "artifactName": "${productName}-Windows-${version}-Setup.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  },
  "linux": {
    "icon": "assets/icons/icon.icns",
    "target": [
      "AppImage"
    ],
    "artifactName": "${productName}-Linux-${version}.${ext}"
  },
  "mas": {
    "entitlements": "mac/entitlements.mas.plist",
    "entitlementsInherit": "mac/entitlements.mas.inherit.plist",
    "hardenedRuntime": false,
    "provisioningProfile": "mac/GPX_prov_profile_manjot.provisionprofile",
    "electronTeamId": "75TVAP9U45",
    "teamId": "75TVAP9U45" 
  }
}
