// @see - https://www.electron.build/configuration/configuration
{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.gpt.chatgpt.secure.ondevice",
  "asar": true,
  "productName": "MyGPX",
  // TODO: Update this for other platforms
  "afterSign": null,
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*",
  ],
  "extraResources": [
    {
      from: 'resources',
      to: '.',
      filter: [
        '**/*'
      ],
    },
  ],
  "mac": {
    "forceCodeSigning": true,
    "icon": "assets/icons/icon.icns",
    "target": [
      "pkg"
    ],
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "bundleVersion": "14",
    "artifactName": "${productName}-Mac-${version}-Installer.${ext}",
    "entitlements": "./mac/entitlements.mac.plist",
    "entitlementsInherit": "./mac/entitlements.mac.inherit.plist",
    "provisioningProfile": "mac/GPX_prov_profile_manjot.provisionprofile"
   
  },
  "win": {
    "icon": "assets/icons/icon.icns",
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "artifactName": "${productName}-Windows-${version}-Setup.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  },
  "linux": {
    "icon": "assets/icons/icon.icns",
    "target": [
      "AppImage"
    ],
    "artifactName": "${productName}-Linux-${version}.${ext}"
  },
  "mas":{
    "type": "distribution",
    "entitlements": "./mac/entitlements.mac.plist",
    "entitlementsInherit": "./mac/entitlements.mac.inherit.plist",
    "provisioningProfile": "mac/GPX_prov_profile_manjot.provisionprofile",
    "notarize": false
  
  }
  
}
